@model CHSAuction.Models.EditEventVM

@{
    ViewData["Title"] = "Events";
}

<h2>Events</h2>

<p>
    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#createEventModal">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model.CurrentEvents)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(model => item.EventName)</h3>
                    <hr />
                    <p>Location: @Html.DisplayFor(model => item.EventLocation)</p>
                    <p># of Tickets: @Html.DisplayFor(model => item.EventTicketNum)</p>
                    <p>Revenue Goal: @Html.DisplayFor(model => item.EventGoal)</p>
                    <p>Start Time: @Html.DisplayFor(model => item.EventStart)</p>
                    <p>End Time: @Html.DisplayFor(model => item.EventEnd)</p>
                    <hr />
                    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#editEventModal-@item.EventId">Edit</a>
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.EventId">Details</a>
                    <a href="#" class="btn btn-default" data-toggle="modal" data-target="#deleteEventModal-@item.EventId">Delete</a>
                </div>
            </div>
        </div>
        
        
        
        // Delete Event Modal
        <div class="modal fade" id="deleteEventModal-@item.EventId" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Are you sure you want to delete this event?</h4>
                    </div>
                    <div class="modal-body">
                        <div>
                            <dl class="dl-horizontal">
                                <dt>
                                    Event Id
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => item.EventId)
                                </dd>
                                <dt>
                                    Event Name
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => item.EventName)
                                </dd>
                                <dt>
                                    Location
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => item.EventLocation)
                                </dd>
                                <dt>
                                    Number of Tickets
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => item.EventTicketNum)
                                </dd>
                                <dt>
                                    Event Goal
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => item.EventGoal)
                                </dd>
                                <dt>
                                    Start Time
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => item.EventStart)
                                </dd>
                                <dt>
                                    End Time
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => item.EventEnd)
                                </dd>
                            </dl>

                            <form asp-action="Delete" asp-route-id="@item.EventId">
                                <input type="hidden" asp-for="@item.EventId" />
                                <input type="submit" value="Delete" class="btn btn-primary" />
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        //Edit Event Modal
        <div class="modal fade" id="editEventModal-@item.EventId" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Edit Event No. @item.EventId</h4>
                    </div>
                    <div class="modal-body">
                        <div>
                            <form asp-action="Edit" asp-route-id="@item.EventId">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="EventId" value="@item.EventId"/>
                                <div class="form-group">
                                    <label asp-for="@item.EventName" class="control-label">Event Name</label>
                                    <input asp-for="EventName" class="form-control" value="@item.EventName" />
                                    <span asp-validation-for="@item.EventName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@item.EventLocation" class="control-label">Location</label>
                                    <input asp-for="EventLocation" class="form-control" value="@item.EventLocation" />
                                    <span asp-validation-for="@item.EventLocation" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@item.EventTicketNum" class="control-label">Number of Tickets</label>
                                    <input asp-for="EventTicketNum" class="form-control" value="@item.EventTicketNum"/>
                                    <span asp-validation-for="@item.EventTicketNum" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@item.EventGoal" class="control-label">Event Goal</label>
                                    <input asp-for="EventGoal" class="form-control" value="@item.EventGoal" />
                                    <span asp-validation-for="@item.EventGoal" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@item.EventStart" class="control-label">Start Time</label>
                                    <input asp-for="EventStart" class="form-control" type="datetime" value="@item.EventStart"/>
                                    <span asp-validation-for="@item.EventStart" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@item.EventEnd" class="control-label">End Time</label>
                                    <input asp-for="EventEnd" class="form-control" type="datetime" value="@item.EventEnd"/>
                                    <span asp-validation-for="@item.EventEnd" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div> 
@* End of div class "row" *@


@* Create Event Modal *@
<div class="modal fade" id="createEventModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create a new Event</h4>
            </div>
            <div class="modal-body">
                <div>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="EventName" class="control-label"> Event Name</label>
                            <input asp-for="EventName" class="form-control" />
                            <span asp-validation-for="EventName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EventLocation" class="control-label">Location</label>
                            <input asp-for="EventLocation" class="form-control" />
                            <span asp-validation-for="EventLocation" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EventTicketNum" class="control-label">Number of Tickets</label>
                            <input asp-for="EventTicketNum" class="form-control" />
                            <span asp-validation-for="EventTicketNum" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EventGoal" class="control-label"> Event Goal</label>
                            <input asp-for="EventGoal" class="form-control" />
                            <span asp-validation-for="EventGoal" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EventStart" class="control-label">Start Time</label>
                            <input asp-for="EventStart" class="form-control" />
                            <span asp-validation-for="EventStart" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EventEnd" class="control-label">End Time</label>
                            <input asp-for="EventEnd" class="form-control" />
                            <span asp-validation-for="EventEnd" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>