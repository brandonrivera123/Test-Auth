                                            <p class="col-lg-3">Value: </p>
                                            <p class="col-lg-9">@Html.DisplayFor(model => item.ItemValue)</p>

                                            <p class="col-lg-3">Donor: </p>
                                            <p class="col-lg-9">@Html.DisplayFor(model => item.GuestId)</p>

                                            <p class="col-lg-3">Package ID: </p>
                                            <p class="col-lg-9">@Html.DisplayFor(model => item.PackageId)</p>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="editItemModal-@item.ItemId" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Edit Item No. @item.ItemId</h4>
                            </div>
                            <div class="modal-body">
                                <form asp-controller="Items" asp-action="Edit" asp-route-id="@item.ItemId">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="ItemId" value="@item.ItemId" />
                                    <div class="form-group">
                                        <label asp-for="@item.ItemName" class="control-label"></label>
                                        <input asp-for="ItemName" class="form-control" value="@item.ItemName" />
                                        <span asp-validation-for="@item.ItemName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@item.ItemDescription" class="control-label"></label>
                                        <input asp-for="ItemDescription" class="form-control" value="@item.ItemDescription" />
                                        <span asp-validation-for="@item.ItemDescription" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@item.CategoryId" class="control-label"></label>
                                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                                            <option value="@item.CategoryId" selected>@Html.DisplayFor(model => item.CategoryId)</option>
                                        </select>
                                        <span asp-validation-for="@item.CategoryId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@item.ItemImage" class="control-label"></label>
                                        <input asp-for="ItemImage" class="form-control" value="@item.ItemImage" />
                                        <span asp-validation-for="@item.ItemImage" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@item.ItemValue" class="control-label"></label>
                                        <input asp-for="ItemValue" class="form-control" value="@item.ItemValue" />
                                        <span asp-validation-for="@item.ItemValue" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@item.PackageId" class="control-label"></label>
                                        <select asp-for="PackageId" class="form-control" asp-items="ViewBag.PackageId">
                                            <option value="@item.PackageId" selected>@Html.DisplayFor(model => item.PackageId)</option>
                                            <option value="">None</option>
                                        </select>
                                        <span asp-validation-for="@item.PackageId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@item.GuestId" class="control-label"></label>
                                        <select asp-for="GuestId" class="form-control" asp-items="ViewBag.GuestId">
                                            <option value="@item.GuestId" selected>@Html.DisplayFor(model => item.GuestId)</option>
                                        </select>
                                        <span asp-validation-for="@item.GuestId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="tab-pane fade" id="packages">
        <div class="row">
            @foreach (var item in Model.packages)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.PackageId)</h3>
                        <p style="height:45px; overflow:hidden">@Html.DisplayFor(modelItem => item.PackageDescription)</p>
                        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#editModal">Edit</a>
                        <a href="#" class="btn btn-default" data-toggle="modal" data-target="#viewPackageDetailModal-@item.PackageId">View Details</a>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="viewPackageDetailModal-@item.PackageId" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Package No. @item.PackageId</h4>
                        </div>
                        <div class="modal-body">
                            <div>
                                <form class="form-horizontal">
                                    <fieldset>
                                        <p class="col-lg-3">Package ID: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.PackageId)</p>

                                        <p class="col-lg-3">Description: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.PackageDescription)</p>

                                        <p class="col-lg-3">Start Bid: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.PackageStartBid)</p>

                                        <p class="col-lg-3">Bid Increment: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.PackageBidIncrement)<p>

                                        <p class="col-lg-3">Final Price: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.PackageFinalPrice)</p>

                                        <p class="col-lg-3">Event: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.EventId)</p>

                                        <p class="col-lg-3">Transaction: </p>
                                        <p class="col-lg-9">@Html.DisplayFor(modelItem => item.TransactionId)</p>


                                    </fieldset>
